<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructionPopup"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="10dp"
    android:layout_gravity="center"
    android:layout_margin="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/instructionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to use Manga Mood Match"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/instructionBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome! To get started, choose up to 3 emotions that match your current mood. Then weâ€™ll suggest a manga that vibes with you."
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/closePopupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got it!" />
</LinearLayout>
